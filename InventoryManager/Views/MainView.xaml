                            </Style>
                        </DataGrid.RowStyle>-->
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="4*" Header="Product Name" Binding="{Binding ProductName}"/>
                            <DataGridTextColumn Width="2*" Header="Product Category" Binding="{Binding ProdCatName}"/>
                            <DataGridTextColumn Width="4*" Header="Description" Binding="{Binding Description}"/>
                            <DataGridTextColumn Width="2*" Header="Location" Binding="{Binding LocationName}"/>
                            <!--<DataGridTextColumn Width="*" Header="Get in Date" Binding="{Binding GetInDate}"/>-->
                            <DataGridTextColumn Width="*" Header="Best Before" Binding="{Binding BestBefore}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Background" Value="{Binding ColorSet}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="Quantity" Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Width="*" Header="Unit" Binding="{Binding UnitName}"/>
 
                        </DataGrid.Columns>
                    </DataGrid>

                    <StatusBar Grid.Row="2" Grid.ColumnSpan="9" Height="25" Margin="0 10 0 0">
                        <StatusBarItem TextBlock.TextAlignment="Left">
                            <TextBlock Foreground="{Binding Path=StatusColor}" Text="{Binding Path=AppStatus}"/>
                        </StatusBarItem>
                    </StatusBar>

